{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES6",
        "baseUrl": "./src",
        "paths": {
            "@assets/*": [
                "assets/*"
            ],
            "@components/*": [
                "components/*"
            ],
            "@pages/*": [
                "pages/*"
            ],
            "@store/*": [
                "store/*"
            ],
            "@api/*": [
                "services/api/*"
            ],
            "@client/*": [
                "services/client/*"
            ],
        },
        "checkJs": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}